/**index.wxss**/

.my-swiper image {
  width: 100%;
}

.wrap {
  display: inline-block;
  margin-top: 0.1rem;
  width: 100%;
}

.img {
  width: 50%;
  height: 50%;
  display: block;
  margin-bottom: 10px;
  margin: auto;
  margin-top: 10px;
}

.txt {
  display: block;
  width: 100%;
  height: 30px;
  line-height: 30px;
  margin-top: 5px;
  font-size:14px;
}

navigator {
  height: 6rem;
  color: rgba(104, 102, 102, 0.877);
  position: relative;
}

.wrap-item {
  display: inline-block;
  width: 33%;
  height: 6rem;
  line-height: 6rem;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
  text-align: center;
  bottom: 100px;
}

/*不支持 :nth-child(2);*/

.wrap-item.exp {
  border: 1px solid #ddd;
  border-top: 0;
}

.avatar {
  height: 48rpx;
  width: 48rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
}
