/* pages/my/my.wxss */

page {
  font-size: 30rpx;
  background: #ececec;
}

.login_btn {
  background-color: transparent;
}

.header {
  height: 230rpx;
  background: #ffd161;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  border-radius: 50%;
  background: white;
  align-self: center;
}

.userinfo-nickname {
  color: black;
  margin-left: 5rpx;
  align-self: center;
}

.usermotto {
  margin-top: 200px;
}

.content .coupon, .content .signOut, .content .address, .content .tel {
  background: white;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 15rpx;
}

.content .coupon, .content .signOut {
  margin: 15rpx 0;
}

.content .signOut {
  text-align: center;
}

.btn_hover {
  background-color: pink;
}

.btn::after {
  border: 0;
  background-color: transparent;
}

.profile-info {
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  padding: 0 30.25rpx;
  background: #333;
}

.profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info {
  flex: 1;
  height: 85rpx;
  padding-left: 31.25rpx;
}

.profile-info .name {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.profile-info .level {
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 10rpx;
  color: #7f7f7f;
  font-size: 30rpx;
}

.avatar-img {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  background: white;
  align-self: center;
}

button {
  width: 148rpx;
  height: 148rpx; 
  border-radius: 50%;
  background: white;
  align-self: center;
  padding: 0px;
  margin: 0px;
}
